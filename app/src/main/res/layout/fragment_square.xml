<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="#FFFFFF">

    <!-- 主内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!-- 筛选栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:layout_marginTop="40dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <!-- 分段控制器容器 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bg_segmented_container"
            android:padding="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/filter_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="所有"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/bg_segmented_item_selected"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/filter_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="日"
                android:textColor="#999999"
                android:textSize="14sp"
                android:background="@drawable/bg_segmented_item_unselected"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/filter_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="月"
                android:textColor="#999999"
                android:textSize="14sp"
                android:background="@drawable/bg_segmented_item_unselected"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/filter_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="年"
                android:textColor="#999999"
                android:textSize="14sp"
                android:background="@drawable/bg_segmented_item_unselected"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- 拍照按钮 -->
        <ImageView
            android:id="@+id/btn_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="拍照"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- 照片网格 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_photos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false" />

    </LinearLayout>

    <!-- 底部操作栏（选择模式时显示，浮在底部导航栏上方） -->
    <LinearLayout
        android:id="@+id/ll_bottom_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="100dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_selected_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已选择 0 张"
            android:textColor="#111111"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btn_cancel_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="14sp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/btn_collage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="拼图"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#2F80FF"
            android:backgroundTint="#2F80FF"
            android:clickable="true"
            android:focusable="true"
            android:minWidth="80dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- 空状态提示 -->
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="暂无照片"
        android:textColor="#999999"
        android:textSize="16sp"
        android:visibility="gone" />

</FrameLayout>

